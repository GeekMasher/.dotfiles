#!/bin/bash

# Detect package manager
if command -v brew &> /dev/null; then
    PKG_MGR="brew"
elif [ -f /etc/os-release ]; then
    . /etc/os-release
    case "$ID" in
        ubuntu|debian)
            PKG_MGR="apt"
            ;;
        arch|manjaro)
            PKG_MGR="pacman"
            ;;
        *)
            echo "[!] Unsupported distribution: $ID"
            exit 1
            ;;
    esac
else
    echo "[!] Unable to detect package manager"
    exit 1
fi

case "$PKG_MGR" in
    apt)
        echo "[+] Upgrading packages (Ubuntu/Debian)..."
        sudo apt update && sudo apt upgrade -y
        sudo apt autoremove -y
        sudo apt autoclean
        ;;
    pacman)
        echo "[+] Upgrading packages (Arch Linux)..."
        sudo pacman -Syu --noconfirm
        sudo pacman -Sc --noconfirm
        ;;
    brew)
        echo "[+] Upgrading packages (Homebrew)..."
        brew upgrade
        brew cleanup
        ;;
esac

echo "[+] System upgraded"
